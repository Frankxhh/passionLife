// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户基本信息模型
model UserInfo {
  id        String   @id // clerk返回的用户id
  height    Float // 身高(cm)
  weight    Float // 体重(g)
  bmi       Float // 体重指数
  compare   Float? // 对比昨天
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
// 用户目标模型
model UserTarget {
  id                    String   @id // clerk返回的用户id
  weeklyTrainingTarget  Int      // 每周目标训练次数
  weeklyDietTarget      Int      // 每周目标饮食达标次数
  targetWeight          Float    // 目标体重(g)
  targetBMI             Float    // 目标BMI
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

// 用户身体数据历史记录
model UserInfoHistory {
  id        String   @id @default(cuid())
  userId    String   // clerk返回的用户id
  weight    Float    // 体重(kg)
  bmi       Float   // 当时的BMI
  recordedAt      DateTime @default(now()) // 记录日期
  
  @@index([userId, recordedAt]) // 添加复合索引优化查询性能
}

